import Layout from "../layouts/Layout.astro";
import { placesLoader } from "../loaders/places";
import { useLocale } from "@utils/locale";

const loader = placesLoader();
const places = await loader.load();

// 获取 Mapbox token
const mapboxToken = import.meta.env.MAPBOX_TOKEN;

// Top N 配置
const TOP_N = 5;

// 类型映射（英文到中文）
const typeMap = {
    restaurant: "餐厅",
    attraction: "景点",
    hotel: "酒店",
    cafe: "咖啡",
    shop: "商场",
};

// 类型显示顺序
const typeOrder = ["restaurant", "attraction", "hotel", "cafe", "shop"];

const { t, locale } = useLocale(Astro.url);

// 数据处理：按类型分组并排序
function processPlaces(places: any[]) {
    // 按类型分组
    const grouped: Record<string, any[]> = {};

    places.forEach((place) => {
        const type = place.type || "other";
        if (!grouped[type]) {
            grouped[type] = [];
        }
        grouped[type].push(place);
    });

    // 对每个类型进行排序
    Object.keys(grouped).forEach((type) => {
        grouped[type].sort((a, b) => {
            // 有评分的优先
            const aHasRating = a.rating != null && a.rating > 0;
            const bHasRating = b.rating != null && b.rating > 0;

            if (aHasRating && !bHasRating) return -1;
            if (!aHasRating && bHasRating) return 1;

            // 都有评分，按评分降序
            if (aHasRating && bHasRating) {
                return b.rating - a.rating;
            }

            // 都没有评分，按访问日期降序，如果没有访问日期则按创建时间降序
            const aDate = a.visit_date
                ? new Date(a.visit_date).getTime()
                : a.created_at
                  ? new Date(a.created_at).getTime()
                  : 0;
            const bDate = b.visit_date
                ? new Date(b.visit_date).getTime()
                : b.created_at
                  ? new Date(b.created_at).getTime()
                  : 0;
            return bDate - aDate;
        });

        // 取 Top N
        grouped[type] = grouped[type].slice(0, TOP_N);
    });

    return grouped;
}

const groupedPlaces = processPlaces(places);
---

<Layout title="吃喝玩乐">
    <h1 class="text-2xl font-bold mb-6">吃喝玩乐</h1>

    <!-- 地图容器 -->
    <div id="map" class="w-full h-96 rounded-lg border shadow mb-6"></div>

    <!-- 统计信息 -->
    <div class="text-sm text-gray-500 mb-6">
        共 {places.length} 个地点
    </div>

    <!-- 分组榜单 -->
    {
        typeOrder.map((type) => {
            const typePlaces = groupedPlaces[type] || [];
            if (typePlaces.length === 0) return null;

            const typeName = typeMap[type] || type;
            const totalCount = places.filter((p) => p.type === type).length;

            return (
                <section class="mb-8">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-xl font-semibold">{typeName}</h2>
                        <span class="text-sm text-gray-500">
                            {typePlaces.length === totalCount
                                ? `共 ${totalCount} 个`
                                : `Top ${typePlaces.length} / 共 ${totalCount} 个`}
                        </span>
                    </div>

                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        {typePlaces.map((place) => (
                            <div
                                class="mb-2 mr-2 cursor-pointer"
                                data-place-id={place.id}
                                data-coordinates={place.coordinates}
                            >
                                <div class="p-3 rounded-xl bg-stone-100 dark:bg-stone-800">
                                    <div class="mb-2 flex flex-row">
                                        <span
                                            class="accent-auto dark:accent-auto font-bold truncate block max-w-[60%]"
                                            title={place.name}
                                        >
                                            {place.name}
                                        </span>
                                        <span class="ml-auto px-2 py-0.5 rounded bg-blue-100 text-blue-600 text-xs">
                                            {typeMap[place.type] || place.type}
                                        </span>
                                    </div>
                                    <div
                                        class="text-sm text-gray-500 truncate block"
                                        title={place.location}
                                    >
                                        {place.location}
                                    </div>
                                    <div class="text-sm">
                                        {place.rating && (
                                            <span class="text-amber-400">
                                                ★ {place.rating}
                                            </span>
                                        )}
                                        {place.visit_date && (
                                            <span class="font-light italic text-xs ml-2">
                                                {place.visit_date}
                                            </span>
                                        )}
                                        {place.moments_id && (
                                            <span>
                                                {" "}
                                                |{" "}
                                                <a
                                                    class="panda-link"
                                                    href={`/moments/${place.moments_id}/`}
                                                >
                                                    {t("reviews.review")}
                                                </a>
                                            </span>
                                        )}
                                    </div>
                                </div>
                            </div>
                        ))}
                    </div>
                </section>
            );
        })
    }

    <!-- 如果没有地点 -->
    {
        places.length === 0 && (
            <div class="text-center text-gray-400 py-12">
                <p class="text-lg mb-2">暂无地点</p>
                <p class="text-sm">快去添加一些地点吧！</p>
            </div>
        )
    }
</Layout>

